<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateApplicationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создание заявки"
        android:textSize="15pt"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/name_of_service"
            android:backgroundTint="@color/green_200"
            android:textColorHint="@color/green_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Название услуги"
            android:textColor="@color/white"
            android:textSize="10pt"/>

        <EditText
            android:id="@+id/number_of_service"
            android:backgroundTint="@color/green_200"
            android:textColorHint="@color/green_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:hint="Номер услуги по каталогу"
            android:textSize="10pt" />

        <EditText
            android:id="@+id/date"
            android:backgroundTint="@color/green_200"
            android:textColorHint="@color/green_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Дата для записи"
            android:textColor="@color/white"
            android:inputType="date"
            android:textSize="10pt" />

        <EditText
            android:id="@+id/price"
            android:backgroundTint="@color/green_200"
            android:textColorHint="@color/green_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Цена"
            android:textColor="@color/white"
            android:inputType="number"
            android:textSize="10pt" />

        <EditText
            android:id="@+id/lead_time"
            android:backgroundTint="@color/green_200"
            android:textColorHint="@color/green_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Время выполнения"
            android:textColor="@color/white"
            android:textSize="10pt" />

        <EditText
            android:id="@+id/extra_services"
            android:backgroundTint="@color/green_200"
            android:textColorHint="@color/green_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Дополнительные услуги"
            android:textColor="@color/white"
            android:textSize="10pt" />

        <EditText
            android:id="@+id/add_info"
            android:backgroundTint="@color/green_200"
            android:textColorHint="@color/green_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Дополнительная информация"
            android:textColor="@color/white"
            android:textSize="10pt" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создать заявку"
        android:onClick="buttonCreateApplication"
        android:textSize="10pt"
        android:background="@color/white"
        android:textColor="@color/gray_200"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

</android.support.constraint.ConstraintLayout>